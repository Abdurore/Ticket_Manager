{% extends 'base.twig' %}
{% block content %}
  <div class="container">
    <header class="hero">
      <div class="wave"></div>
      <div class="decor-circle decor-circle1"></div>
      <div class="decor-circle decor-circle2"></div>
      <div class="hero-content">
        <h1>Signup</h1>
      </div>
    </header>
    <main>
      <form id="signup-form" action="/?page=signup" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input id="email" type="email" required aria-describedby="email-error" />
          <div id="email-error" class="error hidden"></div>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input id="password" type="password" required aria-describedby="password-error" />
          <div id="password-error" class="error hidden"></div>
        </div>
        <button type="submit" class="btn">Signup</button>
      </form>
    </main>
    <footer>Â© 2025 Ticket App</footer>
  </div>
{% endblock %}

