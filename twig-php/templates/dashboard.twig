{% extends 'base.twig' %}
{% block content %}
  <div class="container">
    <header class="hero">
      <div class="wave"></div>
      <div class="decor-circle decor-circle1"></div>
      <div class="decor-circle decor-circle2"></div>
      <div class="hero-content">
        <h1>Dashboard</h1>
      </div>
    </header>
    <main>
      <section id="dashboard-stats" aria-labelledby="dashboard-stats-title">
        <h2 class="visually-hidden" id="dashboard-stats-title">Dashboard Statistics</h2>
        <div class="features cards">
          <article class="card" role="region" aria-label="Total Tickets">
            <h3>Total Tickets</h3>
            <p id="total-tickets">0</p>
          </article>
          <article class="card" role="region" aria-label="Open Tickets">
            <h3>Open Tickets</h3>
            <p id="open-tickets">0</p>
          </article>
          <article class="card" role="region" aria-label="Resolved Tickets">
            <h3>Resolved Tickets</h3>
            <p id="resolved-tickets">0</p>
          </article>
        </div>
      </section>
      <nav class="dash-board-main" aria-label="Dashboard navigation">
        <a href="?page=tickets" class="btn">Manage Tickets</a>
        <button id="logout-btn" class="btn btn-logout" aria-label="Log out of the application">Logout</button>
      </nav>
    </main>
    <footer>Â© 2025 Ticket App</footer>
  </div>
{% endblock %}
